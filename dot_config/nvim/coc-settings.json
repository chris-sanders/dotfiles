{
  // Important, otherwise link completion containing spaces and other special characters won't work.
  "suggest.invalidInsertCharacters": [],
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": true,
  "go.goplsOptions": {
    "formatting.gofumpt": true
  },
  "yaml.format.enable": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": ["/*.yml", "/*.yaml"]
  },
  "languageserver": {
    "zk": {
      "command": "zk",
      "args": [
        "lsp"
      ],
      //"args": ["lsp", "--log", "~/tmp/zk.log"],
      "trace.server": "messages",
      "filetypes": [
        "markdown",
        "pandoc"
      ]
    }
  },
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "off",
  "markdownlint.config": {
    "default": true,
    "line_length": false,
    "MD018": false
  },
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "$PWD/.vim/snips"
  ],
  "cSpell.userWords": [
    "Authz",
    "Kubernetes",
    "Nodeport",
    "Velero",
    "kubectl"
  ],
  "snippets.ultisnips.pythonPrompt": false
}
